
<div id="grid">
  <div class="transitions-enabled infinite-scroll clearfix" id="masonry-container"> 
    
    <% @projects.each do |project| %>
      
      <div class="box">
        <%= link_to (image_tag project["covers"]["404"]), project["url"], :class =>'pulse' %>
        <div class="panel-body">
          <h2 class="titles">
            <%= link_to project["name"], project["url"], :class =>'pulse' %>
          <h2>
        </div>
        
      </div>
    <% end %> 
    
  </div>
</div>